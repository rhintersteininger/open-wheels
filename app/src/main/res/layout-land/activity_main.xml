<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hintersteininger.ralf.openwheels.MainActivity"
    android:background="@color/colorPrimary">

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/button_Main_StartGame"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_main"
        android:textColor="#000"
        android:onClick="startGame" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/button_Main_Exit"
        android:layout_below="@+id/button_Main_StartGame"
        android:layout_alignLeft="@+id/button_Main_StartGame"
        android:layout_alignStart="@+id/button_Main_StartGame"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_main"
        android:textColor="#000"
        android:onClick="exitGame" />
</RelativeLayout>
